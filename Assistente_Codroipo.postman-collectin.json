        {
          "name": "Create Booking (Vapi Compatible)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set(\"booking_id\", jsonData.booking.id);",
                  "    console.log(\"Booking ID salvato: \" + jsonData.booking.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"service\": \"Carta d'Identità Elettronica\",\n  \"serviceCode\": \"CARTA_IDENTITA\",\n  \"name\": \"Mario Rossi\",\n  \"email\": \"mario.rossi@example.com\",\n  \"phone\": \"333-1234567\",\n  \"date\": \"2025-11-15\",\n  \"time\": \"10:00\",\n  \"notes\": \"Prima richiesta CIE\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/bookings",
              "host": ["{{base_url}}"],
              "path": ["api", "bookings"]
            },
            "description": "Crea una nuova prenotazione (formato compatibile con Vapi)"
          }
        },
